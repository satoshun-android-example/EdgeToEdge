<navigation xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/nav_graph"
  app:startDestination="@id/nav_home">

  <fragment
    android:id="@+id/nav_home"
    android:name="com.github.satoshun.example.main.MainFragment"
    tools:layout="@layout/main_frag">

    <action
      android:id="@+id/nav_home_to_full_screen_video"
      app:destination="@id/nav_full_screen_video" />

    <action
      android:id="@+id/nav_home_to_window_insets"
      app:destination="@id/nav_window_insets" />

    <action
      android:id="@+id/nav_home_to_parent_frame_layout"
      app:destination="@id/nav_parent_frame_layout" />

    <action
      android:id="@+id/nav_home_to_coordinator"
      app:destination="@id/nav_coordinator_layout" />

    <action
      android:id="@+id/nav_home_to_bottom_navigation"
      app:destination="@id/nav_bottom_navigation" />

    <action
      android:id="@+id/nav_home_to_recycler_view"
      app:destination="@id/nav_recycler_view" />

    <action
      android:id="@+id/nav_home_to_system_ui_visibility"
      app:destination="@id/nav_system_ui_visibility" />

    <action
      android:id="@+id/nav_home_to_drawer_layout"
      app:destination="@id/nav_drawer_layout" />

    <action
      android:id="@+id/nav_home_to_padding"
      app:destination="@id/nav_padding" />
  </fragment>

  <fragment
    android:id="@+id/nav_window_insets"
    android:name="com.github.satoshun.example.main.windowinsets.WindowInsetsFragment"
    tools:layout="@layout/window_insets_frag" />

  <activity
    android:id="@+id/nav_full_screen_video"
    android:name="com.github.satoshun.example.main.fullscreenvideo.FullscreenVideoActivity"
    android:label="@string/app_name"
    tools:layout="@layout/parent_frame_layout" />

  <activity
    android:id="@+id/nav_parent_frame_layout"
    android:name="com.github.satoshun.example.main.fitssystemwindow.parentframelayout.ParentFrameLayoutActivity"
    android:label="@string/app_name"
    tools:layout="@layout/parent_frame_layout" />

  <activity
    android:id="@+id/nav_coordinator_layout"
    android:name="com.github.satoshun.example.main.fitssystemwindow.coordinatorlayout.CoordinatorLayoutActivity"
    android:label="@string/app_name"
    tools:layout="@layout/coordinator_layout_layout" />

  <activity
    android:id="@+id/nav_bottom_navigation"
    android:name="com.github.satoshun.example.main.fitssystemwindow.bottomnavigation.BottomNavigationActivity"
    android:label="@string/app_name"
    tools:layout="@layout/bottom_navigation" />

  <activity
    android:id="@+id/nav_recycler_view"
    android:name="com.github.satoshun.example.main.fitssystemwindow.recyclerview.RecyclerViewActivity"
    android:label="@string/app_name"
    tools:layout="@layout/recycler_view" />

  <activity
    android:id="@+id/nav_system_ui_visibility"
    android:name="com.github.satoshun.example.main.systemuivisibility.SystemUiVisibilityActivity"
    android:label="@string/app_name"
    tools:layout="@layout/system_ui_visibility" />

  <activity
    android:id="@+id/nav_drawer_layout"
    android:name="com.github.satoshun.example.main.drawerlayout.DrawerLayoutActivity"
    android:label="@string/app_name"
    tools:layout="@layout/system_ui_visibility" />

  <fragment
    android:id="@+id/nav_padding"
    android:name="com.github.satoshun.example.main.padding.PaddingFragment"
    tools:layout="@layout/padding_frag" />
</navigation>
